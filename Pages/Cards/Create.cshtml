@page
@model Lab4.Pages.Cards.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

@if(ViewData["error"] != null ) {
    <h2 class="error">@ViewData["error"]</h2>
}

<h4>Card</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Card.RemoteId" class="control-label"></label>
                <input asp-for="Card.RemoteId" class="form-control" />
                <span asp-validation-for="Card.RemoteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Card.Name" class="control-label"></label>
                <input asp-for="Card.Name" class="form-control" />
                <span asp-validation-for="Card.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Card.Price" class="control-label"></label>
                <input asp-for="Card.Price" class="form-control" />
                <span asp-validation-for="Card.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Card.Picture" class="control-label"></label>
                <input asp-for="Card.Picture" class="form-control" />
                <span asp-validation-for="Card.Picture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
